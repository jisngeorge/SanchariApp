<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Added Internet permission for OkHttp -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SanchariApp"
        tools:targetApi="31">

        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SanchariApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.UserInfoActivity"
            android:exported="false"
            android:label="Your Information"
            android:theme="@style/Theme.SanchariApp" />

        <activity
            android:name=".ui.activity.SearchResultsActivity"
            android:exported="false"
            android:label="Search Results"
            android:parentActivityName=".ui.activity.MainActivity"
            android:theme="@style/Theme.SanchariApp.NoActionBar" />

        <activity
            android:name=".ui.activity.BusDetailsActivity"
            android:exported="false"
            android:label="Bus Details"
            android:parentActivityName=".ui.activity.SearchResultsActivity"
            android:theme="@style/Theme.SanchariApp.NoActionBar" />

        <activity
            android:name=".ui.activity.SuggestEditActivity"
            android:exported="false"
            android:label="Suggest Edit"
            android:parentActivityName=".ui.activity.BusDetailsActivity"
            android:theme="@style/Theme.SanchariApp.NoActionBar" />

        <activity
            android:name=".ui.activity.ConfirmationActivity"
            android:exported="false"
            android:label="Confirm Suggestion"
            android:theme="@style/Theme.SanchariApp.NoActionBar" />

        <!-- FileProvider Configuration -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>

</manifest>

