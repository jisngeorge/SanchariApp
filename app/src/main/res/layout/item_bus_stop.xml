<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center_vertical">

    <!-- Stop Icon -->
    <ImageView
        android:id="@+id/imageViewStopIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_stop"
        android:layout_marginEnd="16dp"
        tools:tint="@android:color/holo_blue_dark" />

    <!-- Stop Name -->
    <TextView
        android:id="@+id/textViewStopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorOnSurface"
        tools:text="Kothamangalam" />

    <!-- Time Icon -->
    <ImageView
        android:id="@+id/imageViewTimeIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_time"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.7"/>

    <!-- Scheduled Time -->
    <TextView
        android:id="@+id/textViewScheduledTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android_textColor="?attr/colorOnSurfaceVariant"
        tools:text="10:30 AM" />

</LinearLayout>

